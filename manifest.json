{
	"manifest_version": 3,
	"name": "Mod Manager Download Helper",
	"description": "Adds missing mod manager download buttons to Nexus Mods files.",
	"version": "1.0",
	"developer": {
		"name": "wxMichael",
		"url": "https://github.com/wxMichael/Mod-Manager-Download-Helper"
	},
	"icons": {
		"32": "images/icon-32.png",
		"64": "images/icon-64.png",
		"128": "images/icon-128.png"
	},
	"browser_specific_settings": {
		"gecko": {
			"id": "mod.manager.download.helper@wxmichael.addons.mozilla.org"
		}
	},
	"content_scripts": [
		{
			"matches": [
				"https://*.nexusmods.com/*/mods/*"
			],
			"js": [
				"nexusmods.js"
			]
		}
	]
}
